[alias]
	br = branch
	ci = commit
	co = checkout
  df = diff
  lg = log -p
	st = status

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
frag = magenta bold
meta = yellow bold
new = green bold
old = red bold
whitespace = red reverse

[color "status"]
added = yellow
changed = green
untracked = cyan

[color]
ui = auto

[core]
  autocrlf = false
  editor = nvim
  whitespace = fix,-indent-with-non-tab,trailing-spacing,cr-at-eol

[credential]
  helper = store

[filter "lfs"]
required = true
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process

[http]
  sslVerify = false

[init]
  defaultBranch = main

[mergetool "diffmerge"]
cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
trustExitCode = false

[pager]
  branch = false

[pull]
	rebase = true

[safe]
	directory = /usr/local/share/omarchy

[user]
	name = observable
	email = hello@observable.art
